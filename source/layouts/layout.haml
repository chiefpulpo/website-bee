%html
  %head
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-124766891-1"></script>
    <script>window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'UA-124766891-1');</script>
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    / Use the title from a page's frontmatter if it has one
    %title= current_page.data.title || "BeeWMS"
    = stylesheet_link_tag "site"
    = javascript_include_tag "site"
  %body
    %header.bHeaderWrapper
      .bHeader
        .bHeader-logo
          = image_tag('images/bee/Logo.png')
        .bHeader-navigation
          #hamburger.bHeader-hamburger= svg_tag('hamburger')
          %ul#menu.aNavigation
            %li.aNavigation-item
            = link_to I18n.t('navigation.home'),I18n.t("path.home") 
            %li.aNavigation-item
            = link_to I18n.t('navigation.productDetail'),I18n.t("path.productDetail") 
            %li.aNavigation-item
            = link_to I18n.t('navigation.contact'),I18n.t("path.contact")
            %li.aNavigation-item
            = link_to 'ES',"/es"
            %li.aNavigation-item
            = link_to 'EN','http://beewms.co'
    = yield
    .bFooterWrapper
      .bFooter
        .bFooter-infos
          .bFooter-logo= image_tag('images/bee/ImgCorp.png')
